generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String

  fileSystemItem FileSystemItem[]
}

model FileSystemItem {
  id          String      @id @default(uuid())
  name        String
  type        ItemType
  parentId    String?
  parent      FileSystemItem?  @relation("FolderContents", fields: [parentId], references: [id])
  children    FileSystemItem[] @relation("FolderContents")
  uploadTime  DateTime @default(now())
  owner       User? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int?

  //For Files
  mimeType    String?
  size        Int?
  url         String?
}

enum ItemType {
  FILE
  FOLDER
}

