<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
</head>

<body>
    <%- include('navbar', { files: true }) %>
    <br />
    <div style="display: flex;">
        <% if (currentFolder.parentId) { %>
            <div>
                <a href="/files/<%= currentFolder.parentId %>/children">../</a>
                &nbsp;
            </div>
        <% } %>
        <% if (children) { %>
            <% children.forEach((child) => { 
                let link = `/files/${child.id}/`;
                if (child.type === 'FOLDER') {
                    link = `/files/${child.id}/children`;
                }
            %>
            <div>
                <a href="<%= link %>"><%= child.name %></a> &nbsp;
                <form action="/files/<%= child.id %>/delete" method="POST">
                    <button type="submit"
                        onclick="return confirm('Are you sure you want to delete <%= child.name %>?');">Delete</button>
                </form>
            </div>

            <% }) %>
        <% } %>
    </div>
</body>

</html>